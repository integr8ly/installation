apiVersion: apps/v1
kind: Deployment
metadata:
  name: apicurio-operator
spec:
  replicas: 1
  selector:
    matchLabels:
      name: apicurio-operator
  template:
    metadata:
      labels:
        name: apicurio-operator
    spec:
      serviceAccountName: apicurio-operator
      containers:
        - name: apicurio-operator
          # Replace this with the built image name
          image: {{ apicurio_operator_image }}
          ports:
          - containerPort: 60000
            name: metrics
          command:
          - apicurio-operator
          imagePullPolicy: {{ apicurio_operator_image_pull_policy }}
          env:
            - name: WATCH_NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: OPERATOR_NAME
              value: "apicurio-operator"
