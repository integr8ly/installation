apiVersion: apps/v1
kind: Deployment
metadata:
  name: 3scale-operator
spec:
  replicas: 1
  selector:
    matchLabels:
      name: 3scale-operator
  template:
    metadata:
      labels:
        name: 3scale-operator
    spec:
      serviceAccountName: 3scale-operator
      containers:
        - name: 3scale-operator
          image: "{{ threescale_operator_image }}:{{ threescale_operator_image_tag }}"
          ports:
          - containerPort: 60000
            name: metrics
          command:
          - 3scale-operator
          imagePullPolicy: Always
          env:
            - name: WATCH_NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: OPERATOR_NAME
              value: "3scale-operator"
